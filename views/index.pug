doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title My Grocery Buddy
    link(rel='stylesheet' href='/css/index.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')

  body
    main.welcome-container

      // ================= HERO SECTION =================
      section.hero
        .hero-text
          h1
            | Welcome to 
            span My Grocery Buddy
          p.subtitle Your smart companion for easy grocery management

          .btn-group
            a.btn(href='/register') Register
            a.btn.outline(href='/login') Login

        // HERO IMAGES (POP ANIMATION)
        .hero-images
          .hero-image
            img.pop-image(src='../images/shop 3.jpg' alt='Grocery App Illustration')
          .hero-image
            img.pop-image(src='../images/shop 2.jpg' alt='Step-by-step grocery management')

      // ================= HOW IT WORKS =================
      section.how-it-works
        h2 How It Works

        .how-it-works-layout

          // LEFT SIDE CARDS
          .how-cards
            .card
              i.fa-solid.fa-plus-circle
              h3 Add Items Quickly
              p Easily add groceries to your list.

            .card
              i.fa-solid.fa-check-circle
              h3 Shop & Check Off
              p Mark items as you shop.

            .card
              i.fa-solid.fa-box
              h3 Manage Pantry
              p Keep track of what you already have.

            .card
              i.fa-solid.fa-clock
              h3 Save Time
              p Shop faster and reduce items and food waste.

          // RIGHT SIDE POPPING IMAGE
          .how-side-image
            img.pop-image(src='../images/shop.jpg' alt='Grocery process')
